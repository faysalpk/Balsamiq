<section class="regback">
  <div class="container regback">
    <h2>Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
     <%= f.email_field :email, :autofocus => true, :class => "reg_fields", :placeholder => "Email"  %> </br>
 
     <%= f.password_field :password, :class => "reg_fields", :class => "reg_fields", :placeholder => "Password" %>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

     <%= f.submit "Sign in",:class => "btnReg"  %>
     

    <% end %>
    <%= render "devise/shared/links" %>

</div>
</section>